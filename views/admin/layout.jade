doctype html
html(lang='zh')
  head
    meta(charset='utf-8')
    title= title
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='keywords', contetn= keywords)
    meta(name='description', content= description)
    link(rel='stylesheet', href='/bower/bootstrap/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(type='text/javascript', src='/bower/jquery/dist/jquery.min.js')
    script(type='text/javascript', src='/bower/underscore/underscore-min.js')
    script(type='text/javascript', src='/bower/bootstrap/dist/js/bootstrap.min.js')
    script(type='text/javascript', src='/bower/backbone/backbone.js')
    script(type='text/javascript', src='/javascripts/scripts.js')
    block scripts
  body
    .container
      block menu
        .row.clearfix
          .col-md-12.column#mainMenu
            ul.nav.nav-pills
              li
                a(href='index') Home
              li.disabled
                a(href='#') Items
              li.disabled
                a(href='#') Menus
              li
                a(href='tags') Tags
              li.navbar-right
                a(href='/logout') Logout

      block title
        .row.clearfix
          .col-md-12.column
            h1= title

      block message
        .row.clearfix
          .col-md-12.column#messageBox

      block content
