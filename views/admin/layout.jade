doctype html
html(lang='zh')
  head
    meta(charset='utf-8')
    title= title
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='keywords', contetn= keywords)
    meta(name='description', content= description)
    block stylesheets
      link(rel='stylesheet', href='/bower/bootstrap/dist/css/bootstrap.min.css')
      link(rel='stylesheet', href='/stylesheets/style.css')
  body
    block menu
      nav.navbar.navbar-inverse.navbar-static-top(role='navigation')
        .container
          ul.nav.navbar-nav
            li#index
              a(href='index') Home
            li#accounts
              a(href='accounts') Accounts
            li#items
              a(href='#') Items
            li#menus
              a(href='#') Menus
            li#tags
              a(href='tags') Tags
          ul.nav.navbar-nav.navbar-right
            li#logout
              a(href='/logout') Logout

    block content

    block backboneTemplate
      script#tmplMessageBox(type='text/template')
        .panel#messagePanel(class!='panel-<%= type %>')
          .panel-heading
            h3.panel-title <%= title %>
              button.close(type='button', data-target='#messagePanel', data-dismiss="alert")
                span(aria-hidden='true') &times;
                span.sr-only Close
          .panel-body <%= content %>&nbsp;&nbsp;&nbsp;&nbsp;
    block scripts
      script(src='/bower/jquery/dist/jquery.min.js')
      script(src='/bower/underscore/underscore-min.js')
      script(src='/bower/bootstrap/dist/js/bootstrap.min.js')
      script(src='/bower/backbone/backbone.js')
      script(src='/bower/typeahead.js/dist/typeahead.bundle.min.js')
      script(src='/bower/backbone.paginator/lib/backbone.paginator.min.js')
      script(src='/javascripts/messagebox.js')
      script
        |$('##{active}').addClass('active');
